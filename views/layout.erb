<!doctype html>
<html lang="en" class="no-js">
  <head>
    <meta charset="utf-8">
    <!--[if IE]><meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1"><![endif]-->

    <title>Wesley Morris Entertainment</title>
    <meta name="description" content="">
    <meta name="author" content="created by blackholeinthemidwest.com">
    <meta name="google-site-verification" content="XGOkwz-gQ-w9VH3Wn3sE9HxDB2Th6ne8A6ms7ChE_0k" />

    <link rel="shortcut icon" href="/favicon.ico">
    <link href="/stylesheets/reset.css" media="screen" rel="stylesheet" />
    <link href="/stylesheets/styles.css" media="screen" rel="stylesheet" />
    
    <% if ENV['RACK_ENV'] == "production" %>
    <%= erb(:'partials/google_analytics', :layout => false) %>
    <% end %>
    <script src="/javascripts/modernizr-1.5.min.js"></script>
    
    <%= yield_content :head %>
  </head>
 
  <body>

    <header>
      <div class="container">
        <div id="logo">
          <h1>wesley morris entertainment, inc.</h1>
        </div>
        <div class="group">
          <div id="navigation">
            <ul class="group">
              <li><a href="/" class="<% if request.path_info == '/' %>active<% end %>">Home</a></li>
          
              <li><a href="/producers" class="<% if request.path_info == '/producers' %>active<% end %>">The Producers</a></li>
              <li><a href="/entertainment" class="<% if request.path_info == '/entertainment' %>active<% end %>">Entertainment</a></li>
              <li><a href="/sports" class="<% if request.path_info == '/sports' %>active<% end %>">Sports</a></li>
              <li><a href="/programming" class="<% if request.path_info == '/programming' %>active<% end %>">Programming</a></li>
              <li><a href="/global" class="<% if request.path_info == '/global' %>active<% end %>">Global</a></li>
              <li><a href="/contact-us" class="<% if request.path_info == '/contact-us' %>active<% end %>">Contact Us</a></li>
            </ul>
          </div>
        </div>
      </div>
    </header>

    <div id="content">
      <%= yield %>
    </div>

    <% if ENV['RACK_ENV'] == "production" %>
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.4.2/jquery.min.js"></script>
    <% else %>
    <script src="/javascripts/jquery-1.4.2.min.js"></script>
    <% end %>
    
    <%= yield_content :tail %>
  </body>
</html>